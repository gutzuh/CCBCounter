{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "functions": {
    "api/*": {
      "runtime": "nodejs18.x"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "(.*)",
      "dest": "/index.html"
    },
    { "src": "/api/upsert", "methods": ["POST", "OPTIONS"], "dest": "/server/index.js" },
    { "src": "/api/changes", "methods": ["POST", "OPTIONS"], "dest": "/server/index.js" }
  ]
}